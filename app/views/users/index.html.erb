<%= render 'list', user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.profile_image, size: '100x100' %></td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user) %></td>
              <% end %>
              </tr>
            </tbody>
          </tr>
        </thead>
      </table>
    </div>