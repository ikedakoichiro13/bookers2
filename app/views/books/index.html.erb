<% flash.each do |type, message| %>
  <div class="alert alert-<%= type %>">
    <%= message %>
  </div>
<% end %>
<%= render 'users/list', user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td><%= link_to image_tag(book.user.get_profile_image), book_path(book) %></td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
          </tr>
        </thead>
      </table>
    </div>